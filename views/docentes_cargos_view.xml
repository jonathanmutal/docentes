<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="docentes_cargos_tree_view">
        <field name="name">Cargos</field>
        <field name="model">docentes.cargos</field>
        <field name="arch" type="xml">
            <tree string="Cargos">
                <field name="partner_id"/>
                <field name="tipo_cargo"/>
                <field name="dependencia"/>
                <field name="caracter"/>
                <field name="fecha_alta"/>
                <field name="fecha_baja"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="docentes_cargos_form_view">
        <field name="name">Cargos</field>
        <field name="model">docentes.cargos</field>
        <field name="arch" type="xml">
            <form string="Cargo">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="tipo_cargo"/>
                        <field name="dependencia"/>
                        <field name="horas"/>
                        <field name="caracter"/>
                        <field name="fecha_alta"/>
                        <field name="fecha_baja"/>
                        <field name="licencia"/>
                        <field name="inicio_licencia"/>
                        <field name="fin_licencia"/>
                        <field name="tipo_licencia"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_docentes_cargos">
        <field name="name">Cargos</field>
        <field name="res_model">docentes.cargos</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="docentes_cargos_form_view"/>
    </record>
    <menuitem name="Cargos menu D" id="menu_docentes_cargos1" parent="base.menu_docentes_configuracion" sequence="30" 
    action="action_docentes_cargos"/>
</odoo>

