<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="docentes_cargos_tipo_tree_view">
        <field name="name">Tipo de cargos</field>
        <field name="model">docentes.cargos.tipo</field>
        <field name="arch" type="xml">
            <tree string="Tipo de cargos">
                <field name="codigo"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="docentes_cargos_tipo_form_view">
        <field name="name">docentes.cargos.tipo.form</field>
        <field name="model">docentes.cargos.tipo</field>
        <field name="arch" type="xml">
            <form string="Cargo">
                <sheet>
                    <group>
                        <field name="codigo"/>
                        <field name="descripcion"/>
                        <field name="dedicacion"/>
                        <field name="horas_catedra"/>
                        <field name="cargo_nomenclador"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_docentes_cargos_tipo">
        <field name="name">Tipo de cargos</field>
        <field name="res_model">docentes.cargos.tipo</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="docentes_cargos_tipo_form_view"/>
    </record>

    <menuitem name="Docentes" id="base.menu_docentes" sequence="9" />
    <menuitem name="Configuracion" id="base.menu_docentes_configuracion" groups="base.group_system" sequence="30" parent="base.menu_docentes"/>
    <menuitem name="Tipos de cargos" id="menu_docentes_cargos_tipos" parent="base.menu_docentes_configuracion" sequence="30"
    action="action_docentes_cargos_tipo"/>
</odoo>

